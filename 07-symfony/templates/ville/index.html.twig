{% extends 'base.html.twig' %}

{% block title %}Liste des Villes!{% endblock %}

{% block body %}
{% if page is defined %}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        {% if page > 1 %}
            <li class="page-item"><a class="page-link" href="{{ path("readVille", {nb:nombre, page:page-1})}}">Précédent</a></li>
        {% endif %}
        {% for i in range(1, nbPage) %}
            <li class="page-item"><a class="page-link" href="{{ path("readVille", {nb:nombre, page:i})}}">{{i}}</a></li>
        {% endfor %}
        {% if page < nbPage %}
            <li class="page-item"><a class="page-link" href="{{ path("readVille", {nb:nombre, page:page+1})}}">Suivant</a></li>
        {% endif %}
    </ul>
</nav>
{% endif %}

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>nom</th>
            <th>action</th>
    </tr>
</thead>
<tbody>
    {% for v in villes %}
        <tr>
            <td> {{v.id}} </td>
            <td> {{v.nom}} </td>
            <td> 
                <a  class="btn btn-primary"href=" {{path("detailVille", {id:v.id})}} ">Voir</a>
                <a class="btn btn-warning" href=" {{path("deleteVille", {id:v.id})}} ">Supprimer</a>
            </td>

        </tr>
    {% endfor %}
</tbody>
</table>

{% endblock %}
